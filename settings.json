{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "FOO": "bar"
  },
  "permissions": {
    "allow": [
      "Git",
      "Npm",
      "Node"
    ],
    "deny": [
      "Sudo",
      "Chmod",
      "Rm -rf",
      "Read(./secrets/**)",
      "Read(./node_modules/**)",
      "Read(./tmp/**)",
      "Read(./idea/**)",
      "Read(./.env)",
      "Read(./.venv)",
      "Read(./.idea)"
    ],
    "defaultMode": "default"
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "sequentialthinking",
    "notion",
    "git"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'About to use tool: $CLAUDE_TOOL_NAME'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\"",
    "padding": 0
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1754010195539
  },
  "skills": [
    "skills/changelog-tracker"
  ]
}
