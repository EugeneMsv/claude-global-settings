{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Git",
      "Npm",
      "Node"
    ],
    "deny": [
      "Sudo",
      "Chmod",
      "Rm -rf",
      "Read(./secrets/**)",
      "Read(./node_modules/**)",
      "Read(./tmp/**)",
      "Read(./idea/**)",
      "Read(./.env)"
    ],
    "defaultMode": "default"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754010195539
  },
  "env": {"FOO": "bar"},

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'About to use tool: $CLAUDE_TOOL_NAME'"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["sequentialthinking", "notion", "git"],
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline --visual-burn-rate emoji-text",
    "padding": 0
  }
}